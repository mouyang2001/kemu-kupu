<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="1200.0" spacing="20.0" stylesheets="@../css/Topic.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.scene.Topic">
   <children>
      <Label fx:id="title" stylesheets="@../css/Topic.css" text="Choose your topic">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </Label>
      <ListView fx:id="topicListView" maxWidth="640.0" prefHeight="400.0" prefWidth="640.0">
         
      </ListView>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0">
         <children>
            <Button fx:id="back" mnemonicParsing="false" onAction="#leaveQuiz" prefHeight="60.0" prefWidth="150.0" text="Back">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="start" disable="true" mnemonicParsing="false" onAction="#startQuiz" prefHeight="60.0" prefWidth="150.0" text="Start">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
