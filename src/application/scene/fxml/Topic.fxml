<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="1200.0" stylesheets="@../css/Topic.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.scene.Topic">
   <children>
      <Label fx:id="title" stylesheets="@../css/Topic.css" text="Choose your topic">
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </Label>
      <ListView fx:id="topicListView" prefHeight="200.0" prefWidth="200.0">
         <VBox.margin>
            <Insets left="100.0" right="100.0" top="50.0" />
         </VBox.margin>
      </ListView>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="200.0">
         <children>
            <Button fx:id="back" mnemonicParsing="false" onAction="#leaveQuiz" prefHeight="60.0" prefWidth="150.0" text="Back" />
            <Button fx:id="start" mnemonicParsing="false" onAction="#startQuiz" prefHeight="60.0" prefWidth="150.0" text="Start" />
         </children>
      </HBox>
   </children>
</VBox>
